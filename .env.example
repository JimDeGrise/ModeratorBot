BOT_TOKEN=your_telegram_bot_token_here
# Список ID администраторов (через запятую). Не обязательно, просто даёт доступ к /start в ЛС и т.п.
ADMIN_IDS=123456789,987654321
# Текст правил сообщества
RULES=Не спамить, не оскорблять, без рекламы. Соблюдаем взаимоуважение.
# Антифлуд: сколько сообщений за окно времени
ANTIFLOOD_MAX_MESSAGES=5
# Антифлуд: размер окна времени в секундах
ANTIFLOOD_WINDOW_SECONDS=10
# Количество предупреждений до автоматического мута (в часах задаётся ниже)
WARNS_TO_PUNISH=3
AUTO_MUTE_HOURS=24
# Разрешённые домены (через запятую). Пусто — ссылки запрещены всем, кроме админов.
ALLOWED_DOMAINS=example.com,github.com
# “Плохие” слова (через запятую, регистр игнорируется)
BANNED_WORDS=плохослово1,плохослово2
# Капча: таймаут ожидания решения (секунд)
CAPTCHA_TIMEOUT_SECONDS=120
# Путь до БД (создастся автоматически)
DB_PATH=./data/modbot.db
